<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_car_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@mipmap/car_img"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_car_name"
                style="@style/dachezuche_title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="起亚2K"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_carriage_count"
                    style="@style/dachezuche_gray_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三厢"/>

                <TextView
                    android:id="@+id/tv_displacement"
                    style="@style/dachezuche_gray_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="1.4自动"/>

                <TextView
                    android:id="@+id/tv_car_seat_count"
                    style="@style/dachezuche_gray_small_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="乘坐5人"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/normalTextSize"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取车时间"
                android:id="@+id/textView91"/>

            <TextView
                android:textColor="@color/title_bar"
                android:textSize="18dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="03-22"
                android:id="@+id/textView92"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="周二 15:00"
                android:id="@+id/textView93"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/time_under_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView32"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:textColor="@color/title_bar"
                android:textSize="@dimen/normalTextSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3个月"
                android:id="@+id/textView97"
                android:layout_above="@+id/imageView32"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/normalTextSize"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="还车时间"
                android:id="@+id/textView94"/>

            <TextView
                android:textColor="@color/title_bar"
                android:textSize="18dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="05-22"
                android:id="@+id/textView95"/>

            <TextView
                android:layout_weight="1"
                android:gravity="center|top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="周五 15:00"
                android:id="@+id/textView96"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>
    <LinearLayout
        android:id="@+id/ll_dache_jg_order_get_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="取车门店"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/tv_dache_jg_store_name_get"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="三明客运中心店"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:id="@+id/ll_dache_jg_order_return_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="还车门店"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/tv_dache_jg_store_name_return"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="三明客运中心店"/>

    </LinearLayout>
</LinearLayout>